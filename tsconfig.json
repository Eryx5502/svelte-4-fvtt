{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "svelte",
      "@league-of-foundry-developers/foundry-vtt-types",
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "dist",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./**/.*.test.*",
    "./**/__mocks__"
  ]
}
